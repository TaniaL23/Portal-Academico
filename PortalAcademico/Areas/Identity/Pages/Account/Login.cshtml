@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="auth-wrapper">
  <div class="card shadow-sm auth-card border-0">
    <div class="card-body p-4">

      <!-- 🔹 Logo y título del proyecto -->
      <div class="text-center mb-3">
        <img src="~/images/logo-portal.png" alt="Portal Académico" style="height:70px;" />
        <h1 class="h4 mt-2">Portal Académico</h1>
        <p class="text-muted small">Acceso a cursos y matrículas</p>
      </div>

      <form id="account" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

        <div class="mb-3">
          <label asp-for="Input.Email" class="form-label">Correo</label>
          <input asp-for="Input.Email" class="form-control" autocomplete="username" />
          <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <div class="mb-2">
          <label asp-for="Input.Password" class="form-label">Contraseña</label>
          <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
          <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="form-check">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label class="form-check-label" asp-for="Input.RememberMe">Recordarme</label>
          </div>
          <a id="forgot-password" asp-page="./ForgotPassword" class="small">¿Olvidaste tu contraseña?</a>
        </div>

        <button id="login-submit" type="submit" class="btn btn-primary w-100">Entrar</button>

        <div class="text-center mt-3">
          <span class="text-muted small">¿No tienes cuenta?</span>
          <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="small ms-1">Regístrate</a>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
